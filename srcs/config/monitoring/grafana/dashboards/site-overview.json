{
  "id": null,
  "uid": "site-overview",
  "title": "Site Overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Débit HTTP par route (req/s)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total[5m])) by (route, status)",
          "legendFormat": "{{route}} {{status}}"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Latence p95 par route (s)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le, route) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{route}} p95"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Taux d'erreurs HTTP (4xx / 5xx)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_errors_total[5m])) by (route, type)",
          "legendFormat": "{{route}} {{type}}"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "CPU backend (core-seconds/s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(ft_transcendence_process_cpu_seconds_total[5m])",
          "legendFormat": "CPU backend"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Mémoire backend (bytes)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "ft_transcendence_process_resident_memory_bytes",
          "legendFormat": "RSS backend"
        }
      ]
    },
    {
      "id": 6,
      "type": "table",
      "title": "Stats DB (SQLite)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "datasource": { "type": "frser-sqlite-datasource", "uid": "SQLite" },
      "targets": [
        {
          "refId": "A",
          "format": "table",
          "rawSql": "SELECT name AS table_name, (SELECT COUNT(*) FROM sqlite_master WHERE type='table') AS table_count FROM sqlite_master WHERE type='table' LIMIT 10;"
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
