{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noEmit": true,
    "types": ["react", "react-dom"]
  },

  "include": [
    "../client/**/*.ts",
    "../client/**/*.tsx",
    "./**/*.ts",
    "./**/*.tsx"
  ],

  "exclude": ["node_modules", "dest"]
}
